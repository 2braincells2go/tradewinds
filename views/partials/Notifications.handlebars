<div class="notifications">
    
    {{#if notifications.success}}
    <div class="success">
	{{ notifications.success }}
    </div>
    {{/if}}
    
    {{#if notifications.error}}
    <div class="error">
	{{ notifications.error }}
    </div>
    {{/if}}

</div>

<script type="text/javascript">

    (function($){

        $(document).ready(function(){
            setTimeout(function(){
                $('.notifications').fadeOut();
            }, 3000);
        });   

    })(jQuery);

</script>

